<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/activityBackground"
    tools:context="de.fh_muenster.projectxx.ForumPosts">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAddPost"
        android:id="@+id/btnposten"
        android:background="@color/btnBackground"
        android:textColor="@color/btnTextColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtPostForum"
        android:layout_alignTop="@+id/btnposten"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnposten"
        android:layout_toStartOf="@+id/btnposten"
        android:layout_alignParentBottom="true"
        android:hint="@string/hintAddPost"
        android:textColorHint="@color/textColorHint"
        android:textColor="@color/textColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Forumtitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColor"/>

    <ListView
        style="@style/LiestviewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvPosts"
        android:layout_below="@+id/Forumtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_above="@+id/btnposten" />
</RelativeLayout>
